<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:id="@+id/title_city"
            android:layout_centerVertical="true"
            android:textColor="#FF000000"
            android:layout_marginLeft="18dp"
            android:text="连接设备WiFi"/>
        <LinearLayout
            android:id="@+id/city_location_ll"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/choosed_city"
                android:text="上海市"
                android:textColor="#FF4A4A4A"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:src="@drawable/citylists_icon_gps"
                android:layout_marginRight="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="42dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/first_number"
                android:text="1"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/text_circle_bg"
                android:textColor="#FFFFFFFF"
                android:textSize="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/first_title"
                android:text="  设置-WiFi，选择“全播WiFi”       "
                android:textColor="#FF333333"
                android:textSize="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/second_number"
                android:text="2"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/text_circle_grey_gb"
                android:textColor="#FFFFFFFF"
                android:textSize="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/second_title"
                android:text="  输入密码，等待连接成功   "
                android:textColor="@color/colorGreyLittle"
                android:textSize="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/icon_wifi"
                android:layout_width="wrap_content"
                android:src="@mipmap/info"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/third_number"
                android:text="3"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/text_circle_grey_gb"
                android:textColor="#FFFFFFFF"
                android:textSize="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/third_title"
                android:text="  返回全播APP，免费播放视频   "
                android:textColor="@color/colorGreyLittle"
                android:textSize="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/marquee_viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:autoStart="true"
        android:background="@color/white"
        android:flipInterval="1400"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:inAnimation="@anim/anim_in"
        android:outAnimation="@anim/anim_out"
        />

    <Button
        android:id="@+id/go_connection_bt"
        android:layout_width="wrap_content"
        android:text="看懂了，去连接"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="13dp"
        android:layout_gravity="center"
        android:textColor="#ffffffff"
        android:background="@drawable/btn_search"
        android:textSize="10dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <com.example.cherry.fullplayer.view.CheckBoxSample
            android:id="@+id/no_hint_checkbox"
            app:color_background="@color/button_color"
            app:color_border="@color/colorGreyLittle"
            app:size="18dp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ok"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:text="不再提示"
            android:layout_gravity="center"
            android:textColor="#ff333333"
            android:textSize="9dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </LinearLayout>

</LinearLayout>