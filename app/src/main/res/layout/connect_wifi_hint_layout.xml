<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/title_city"
            android:layout_centerVertical="true"
            android:textColor="#FF000000"
            android:layout_marginLeft="18dp"
            android:text="连接设备WiFi"/>
        <TextView
            android:id="@+id/choosed_city"
            android:text="上海市"
            android:textColor="#FF4A4A4A"
            android:textSize="12dp"
            android:layout_marginRight="52dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/citylists_icon_gps"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/first_number"
                android:text="1"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/text_circle_bg"
                android:textColor="#FFFFFFFF"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/first_title"
                android:text="  设置-WiFi，选择“全播WiFi”     "
                android:textColor="#FF333333"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/second_number"
                android:text="2"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/text_circle_grey_gb"
                android:textColor="#FFFFFFFF"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/second_title"
                android:text="  输入密码，等待连接成功         "
                android:textColor="@color/colorGreyLittle"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/third_number"
                android:text="3"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/text_circle_grey_gb"
                android:textColor="#FFFFFFFF"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/third_title"
                android:text="  返回全播APP，免费播放视频"
                android:textColor="@color/colorGreyLittle"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <com.example.cherry.fullplayer.mzbanner.MZBannerView
        android:id="@+id/banner_normal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:open_mz_mode="false"
        app:canLoop="true"
        app:indicatorAlign="center"
        />

</LinearLayout>