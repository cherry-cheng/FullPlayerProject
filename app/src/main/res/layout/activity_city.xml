<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:id="@+id/title_city"
            android:layout_centerVertical="true"
            android:textColor="#FF000000"
            android:layout_marginLeft="18dp"
            android:text="选择城市"/>
        <TextView
            android:id="@+id/choosed_city"
            android:text="上海市"
            android:textColor="#FF4A4A4A"
            android:textSize="12dp"
            android:layout_marginRight="52dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_icon_setting"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:text="热门城市"
            android:layout_below="@+id/title_city"
            android:textColor="#FF9B9B9B"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@+id/city_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="#888888"
            android:dividerHeight="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/city_dialog"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30.0sp"
        android:visibility="gone" />

    <com.example.cherry.fullplayer.view.QuickLocationBar
        android:id="@+id/city_loactionbar"
        android:layout_width="30.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="right|center"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="98dp"
        android:paddingBottom="2dp" />

</FrameLayout>