<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:id="@+id/title_city"
            android:layout_centerVertical="true"
            android:textColor="#FF000000"
            android:layout_marginLeft="16dp"
            android:text="选择城市"/>
        <TextView
            android:id="@+id/choosed_city"
            android:text="上海市"
            android:textColor="#ff4a4a4a"
            android:textSize="13dp"
            android:layout_marginRight="52dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_icon_setting"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10.0dp"
        android:text="完成"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_search"
        android:layout_marginLeft="12.0dp"
        android:layout_marginRight="12.0dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl"
        android:layout_above="@id/button"
        android:layout_marginLeft="16.0dp"
        android:layout_marginRight="30.0dp" />

    <com.example.cherry.fullplayer.view.WaveSideBarView
        android:id="@+id/waveView"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl"
        android:layout_marginTop="8dp"
        android:layout_height="match_parent"
        android:layout_above="@id/button" />
</RelativeLayout>
