<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="修改设备密码"
            android:textSize="18dp"/>

    </RelativeLayout>

    <View style="@style/Divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="158dp">
        <TextView
            android:id="@+id/title_device"
            android:layout_width="wrap_content"
            android:text="设备名称"
            android:layout_above="@+id/deviceWifiName"
            android:textColor="#FF4A4A4A"
            android:layout_centerInParent="true"
            android:textSize="14dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/deviceWifiName"
            android:text="全播WiFi_001"
            android:textColor="#FF000000"
            android:clickable="false"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Setting_WifiSignal"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:text="原密码"/>
        <EditText
            android:id="@+id/inputOriginalPwd"
            android:hint="请输入原密码"
            android:textColor="#FF9B9B9B"
            android:textSize="15dp"
            android:clickable="true"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:layout_marginLeft="35dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/DividerPadding"/>

    <LinearLayout
        android:id="@+id/Setting_ChangePwd"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:text="新密码"/>

        <EditText
            android:id="@+id/inputCurrentPwd"
            android:text="请输入新密码"
            android:clickable="true"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:textColor="#FF9B9B9B"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/DividerPadding"/>

    <LinearLayout
        android:id="@+id/Setting_ChangeDevice"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:text="确认密码"/>
        <EditText
            android:id="@+id/inputCurrentPwd2"
            android:text="请再重复输入一次"
            android:textColor="#FF9B9B9B"
            android:textSize="15dp"
            android:clickable="true"
            android:background="@null"
            style="?android:attr/textViewStyle"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/DividerPadding"/>

    <LinearLayout
        android:id="@+id/Setting_Aboutus"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_height="78dp">

        <Button
            android:id="@+id/bt_confirm_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认修改"
            android:textColor="#FFFFFFFF"
            android:background="@drawable/btn_search"
            android:textSize="15dp"
            android:layout_gravity="center" />
        <TextView
            android:textSize="12dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGrey"
            android:text="注意：修改密码后会重新连接设备，需要输入新密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>